                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="allItemsButton" layoutX="21.0" layoutY="304.0" mnemonicParsing="false" prefHeight="82.0" prefWidth="79.0" style="-fx-background-radius: 100;" styleClass="round_button" stylesheets="@button-css.css">
