   <children>
      <AnchorPane fx:id="startPageAnchorPane" layoutX="-2.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Button fx:id="startCardGameButton" layoutX="21.0" layoutY="106.0" mnemonicParsing="false" pickOnBounds="false" prefHeight="166.0" prefWidth="168.0" style="-fx-background-radius: 100;" stylesheets="@button-css.css">

               <graphic>
                  <ImageView fx:id="imagecard" fitHeight="130.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" styleClass="button-css.css">
                     <image>
                        <Image url="@../../../resources_img/cards.png" />
                     </image></ImageView>
               </graphic>
            </Button>
            <Button fx:id="startDiceGameButton" layoutX="421.0" layoutY="106.0" mnemonicParsing="false" onAction="#onStartDiceGameButtonClick" pickOnBounds="false" prefHeight="166.0" prefWidth="168.0" style="-fx-background-radius: 100;" stylesheets="@button-css.css">
               <graphic>
                  <ImageView fitHeight="145.0" fitWidth="144.0" preserveRatio="true" styleClass="round_button">
                     <image>
                        <Image url="@../../../resources_img/dice.png" />
